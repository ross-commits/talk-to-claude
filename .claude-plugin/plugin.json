{
  "name": "ttc",
  "version": "0.1.0",
  "description": "Talk to Claude - Voice calls and texts powered by AWS Nova Sonic and Twilio",
  "author": {
    "name": "ross-commits",
    "url": "https://github.com/ross-commits"
  },
  "repository": "https://github.com/ross-commits/talk-to-claude",
  "license": "MIT",
  "keywords": ["phone", "voice", "calls", "sms", "texting", "nova-sonic", "aws", "bedrock", "twilio"],
  "skills": "./skills",
  "mcpServers": {
    "ttc": {
      "command": "bun",
      "args": ["run", "--cwd", "${CLAUDE_PLUGIN_ROOT}/server", "start"],
      "env": {
        "TTC_PHONE_PROVIDER": "${TTC_PHONE_PROVIDER:-twilio}",
        "TTC_PHONE_ACCOUNT_SID": "${TTC_PHONE_ACCOUNT_SID}",
        "TTC_PHONE_AUTH_TOKEN": "${TTC_PHONE_AUTH_TOKEN}",
        "TTC_PHONE_NUMBER": "${TTC_PHONE_NUMBER}",
        "TTC_USER_PHONE_NUMBER": "${TTC_USER_PHONE_NUMBER}",
        "TTC_VOICE_BACKEND": "${TTC_VOICE_BACKEND:-nova-sonic}",
        "TTC_AWS_REGION": "${TTC_AWS_REGION:-us-east-1}",
        "TTC_NOVA_SONIC_MODEL": "${TTC_NOVA_SONIC_MODEL:-amazon.nova-sonic-v1:0}",
        "TTC_NOVA_SONIC_VOICE": "${TTC_NOVA_SONIC_VOICE:-tiffany}",
        "TTC_OPENAI_API_KEY": "${TTC_OPENAI_API_KEY}",
        "TTC_TTS_VOICE": "${TTC_TTS_VOICE:-onyx}",
        "TTC_NGROK_AUTHTOKEN": "${TTC_NGROK_AUTHTOKEN}",
        "TTC_NGROK_DOMAIN": "${TTC_NGROK_DOMAIN}",
        "TTC_PORT": "${TTC_PORT:-3333}",
        "TTC_TRANSCRIPT_TIMEOUT_MS": "${TTC_TRANSCRIPT_TIMEOUT_MS:-180000}",
        "TTC_STT_SILENCE_DURATION_MS": "${TTC_STT_SILENCE_DURATION_MS:-800}",
        "TTC_SELF_HOSTED_STT_URL": "${TTC_SELF_HOSTED_STT_URL}",
        "TTC_SELF_HOSTED_TTS_URL": "${TTC_SELF_HOSTED_TTS_URL}"
      }
    }
  },
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "prompt",
            "prompt": "SILENTLY evaluate if you should contact the user. ONLY use initiate_call if you completed significant work and need to discuss next steps, or are genuinely blocked. Consider send_text for quick updates that don't need a voice conversation. Do NOT output any text - either call, text, or do nothing."
          }
        ]
      }
    ]
  }
}
